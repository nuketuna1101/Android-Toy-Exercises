<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mukjibba Game"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="30dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_howto"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_howto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOW TO"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="80dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        />

    <Button
        android:id="@+id/button_gamestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAME START"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="80dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_howto"
        />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="80dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_gamestart" />

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="developed by Jaeyoung Ko\n(jyko1101@gmail.com)"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>