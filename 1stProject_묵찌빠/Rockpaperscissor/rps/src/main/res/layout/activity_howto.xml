<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Howto">

    <TextView
        android:id="@+id/text_gamerule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Game Rule&gt;"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintBottom_toTopOf="@id/text_gamerule_exp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_gamerule_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="
        1 - Play Rock-Paper-Scissor once with the same rule of RPS. The winner gets the position to attack, while the other is in defending postion.\n
        2 Then play Rock-Paper-Scissor one more time. But this time it only matters that each player throws the same symbol.\n
        If the same, the player in attacking postion gets score.\n
        If not, the result of Rock-Paper-Scissor decides the players' positions again. Repeat the previous procedure."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"


        app:layout_constraintTop_toBottomOf="@id/text_gamerule_title" />

    <TextView
        android:id="@+id/text_control_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="&lt;Control&gt;"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintTop_toBottomOf="@id/text_gamerule_exp" />

    <TextView
        android:id="@+id/text_control_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="
        Choose one of the three symbols by touching the icon."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"


        app:layout_constraintTop_toBottomOf="@id/text_control_title" />

</androidx.constraintlayout.widget.ConstraintLayout>